{
  "name": "hermes-obsidian-plugin",
  "version": "1.4.8",
  "description": "Obsidian plugin for Hermes Voice Assistant",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"pnpm build-css --watch\" \"esbuild main.ts --bundle --outfile=main.js --external:obsidian --format=cjs --watch --jsx=automatic\" \"node scripts/deploy-watch.mjs dev\"",
    "build": "npm run build-css && esbuild main.ts --bundle --outfile=main.js --external:obsidian --format=cjs --minify --jsx=automatic && ./deploy.sh dev",
    "build-css": "tailwindcss -i ./styles-input.css -o ./styles.css --minify",
    "watch-css": "tailwindcss -i ./styles-input.css -o ./styles.css --watch",
    "serve": "pnpm build-standalone && npx vite preview --port 3000 --host 0.0.0.0",
    "dev-standalone": "concurrently \"pnpm build-css --watch\" \"npx vite --port 3000 --host 0.0.0.0\"",
    "build-standalone": "pnpm build-css && npx vite build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "./lint-and-fix.sh",
    "release": "./release.sh",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@types/js-yaml": "^4.0.9",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.0.0",
    "esbuild": "^0.15.0",
    "eslint": "^9.39.2",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "obsidian": "^1.1.1",
    "typescript": "^4.9.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.0.0"
  }
}
