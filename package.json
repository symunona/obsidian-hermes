{
  "name": "hermes-obsidian-plugin",
  "version": "1.0.0",
  "description": "Obsidian plugin for Hermes Voice Assistant",
  "main": "main.js",
  "scripts": {
    "dev": "esbuild main.ts --bundle --outfile=main.js --external:obsidian --format=cjs --watch --jsx=automatic",
    "build": "npm run build-css && esbuild main.ts --bundle --outfile=main.js --external:obsidian --format=cjs --minify --jsx=automatic",
    "build-css": "tailwindcss -i ./styles-input.css -o ./styles.css --minify",
    "serve": "pnpm build-standalone && npx vite preview --port 3000 --host 0.0.0.0",
    "dev-standalone": "concurrently \"pnpm build-css --watch\" \"npx vite --port 3000 --host 0.0.0.0\"",
    "build-standalone": "pnpm build-css && npx vite build"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "marked": "^17.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.0.0",
    "esbuild": "^0.15.0",
    "obsidian": "^1.1.1",
    "typescript": "^4.9.0",
    "vite": "^5.0.0"
  }
}
